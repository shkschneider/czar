# Build system for CZar C semantic authority layer
CC     ?= cc -v
STD    ?= c11
OPT    ?= O2
CFLAGS := -std=$(STD) -Wall -Wextra -Werror -Wno-unknown-pragmas -$(OPT)
LDFLAGS = -static -lc
OUT    ?= build/cz

# Binary
SOURCES = $(wildcard src/*.c) $(wildcard src/**/*.c)
OBJECTS = $(patsubst src/%.c,build/%.o,$(SOURCES))
all: $(OUT)
@file ./$(OUT)
$(OUT): $(OBJECTS)
$(CC) $(OBJECTS) $(LDFLAGS) -o $(OUT)
build/%.o: src/%.c
@mkdir -p $(@D)
$(CC) $(CFLAGS) -c $< -o $@
.PHONY: all

# Tests
TESTS = $(wildcard test/*.cz)
test: $(OUT) $(TESTS:.cz=) $(OUT)
@echo "All tests passed."
test/%: test/%.cz $(OUT)
@echo "- $@"
@./$(OUT) $< >/dev/null
@$(CC) $(CFLAGS) -c $<.c -o $<.o
@$(CC) $(CFLAGS) $<.o $(LDFLAGS) -o $@
@./$@ >/dev/null 2>/dev/null
.PHONY: test $(TESTS)

# Multi-file project build rule
# Transpile all .cz files, then compile and link like regular C
# Usage: make test/multifiles builds test/multifiles/multifiles binary
test/%/: $(OUT)
@echo "Building multi-file project: $@"
@for czfile in $$(find $@ -name "*.cz"); do \
echo "  Transpiling $$czfile"; \
./$(OUT) $$czfile >/dev/null; \
done
@obj_files=""; \
for cfile in $$(find $@ -name "*.cz.c"); do \
ofile="$${cfile%.c}.o"; \
dir=$$(dirname $$cfile); \
echo "  Compiling $$cfile"; \
$(CC) $(CFLAGS) -I$$dir -c "$$cfile" -o "$$ofile"; \
obj_files="$$obj_files $$ofile"; \
done; \
project_name=$$(basename $@); \
output="$@$$project_name"; \
echo "  Linking $$output"; \
$(CC) $$obj_files $(LDFLAGS) -o "$$output"
@echo "Build complete: $@$$(basename $@)"
.PHONY: test/%/

# Cleanup
stat:
@find ./src -type f -name "*.c" | xargs wc -l | cut -c2- | sort -n
@grep -Ro ';' ./src/ | wc -l | xargs -I{} printf '%5d statements\n' "{}"
@find ./test -type f -name "*.cz" | wc -l | xargs -I{} printf '%5d tests/*.cz\n' "{}"
clean:
@rm -rvf ./build/
@rm -vf ./test/*.pp.cz ./test/*.cz.c ./test/*.cz.h ./test/*.o
@find ./test -type f -executable -exec rm -vf {} \;
.PHONY: stat clean
