#include <stdint.h>
#include <stddef.h>
#include <stdio.h>

/* Test enum with scoped syntax - should not generate warnings */

enum Color {
    COLOR_RED,
    COLOR_GREEN,
    COLOR_BLUE
};

char* color_name(enum Color c) {
    switch (c) {
    case Color.COLOR_RED:
        return "Red";
    case Color.COLOR_GREEN:
        return "Green";
    case Color.COLOR_BLUE:
        return "Blue";
    default:
        UNREACHABLE("Invalid color value");
    }
}

enum Status {
    STATUS_OK,
    STATUS_ERROR,
    STATUS_PENDING
};

i32 status_code(enum Status s) {
    switch (s) {
    case Status.STATUS_OK:
        return 0;
    case Status.STATUS_ERROR:
        return 1;
    case Status.STATUS_PENDING:
        return 2;
    default:
        UNREACHABLE("Invalid status value");
    }
}

int main(void) {
    enum Color c = COLOR_RED;
    printf("Color: %s\n", color_name(c));
    
    enum Status s = STATUS_OK;
    printf("Status code: %d\n", status_code(s));
    
    return 0;
}
