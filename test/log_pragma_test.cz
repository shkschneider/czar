#include <stdio.h>

/* Test pragma czar debug directive */
#pragma czar debug false

int main(void) {
    printf("=== Testing CZar Logging with Debug OFF via Pragma ===\n\n");

    /* With debug false, only INFO+ log levels should appear */
    printf("--- Only INFO+ log levels should be visible ---\n");

    Log.verbose("This verbose should NOT appear");
    Log.debug("This debug should NOT appear");
    Log.info("This info SHOULD appear");
    Log.warning("This warning SHOULD appear");
    Log.error("This error SHOULD appear");

    printf("\n=== Test complete ===\n");

    return 0;
}
