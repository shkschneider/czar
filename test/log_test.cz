#include <stdio.h>

/* Use pragma to set debug mode ON - all log levels will be visible */
#pragma czar debug true

int main(void) {
    printf("=== Testing CZar Logging System ===\n\n");

    /* Test with debug mode ON (via pragma) - all levels should show */
    printf("--- Debug mode ON (via pragma) - all levels visible ---\n");

    Log.verbose("This verbose message SHOULD appear");
    Log.debug("This debug message SHOULD appear");
    Log.info("This info message SHOULD appear");
    Log.warning("This warning message SHOULD appear");
    Log.error("This error message SHOULD appear");

    printf("\n--- Testing format strings ---\n");

    int value = 42;
    char *text = "test";
    Log.info("Integer: %d, String: %s", value, text);
    Log.warning("Pointer: %p, Hex: 0x%x", (void*)&value, value);

    printf("\n=== All logging tests passed ===\n");

    return 0;
}
