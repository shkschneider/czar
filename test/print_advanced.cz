#include <stdio.h>

int main(void) {
    printf("=== Advanced cz_print Examples ===\n\n");

    /* Example 1: Simple positional placeholders */
    printf("--- Example 1: Positional Placeholders ---\n");
    printf("%s", cz_format("The answer is {}\n", 42));
    printf("%s", cz_format("Pi is approximately {}\n", 3.14159));
    
    /* Example 2: Multiple values */
    printf("\n--- Example 2: Multiple Values ---\n");
    int age = 25;
    const char *city = "Paris";
    printf("%s", cz_format("{} is {} years old and lives in {}\n", "Alice", age, city));
    
    /* Example 3: Named placeholders for clarity */
    printf("\n--- Example 3: Named Placeholders ---\n");
    int x = 10;
    int y = 20;
    printf("%s", cz_format("Point: x={{x_coord}}, y={{y_coord}}\n", x, y));
    
    /* Example 4: Mixed types */
    printf("\n--- Example 4: Mixed Types ---\n");
    char letter = 'Z';
    unsigned int count = 100;
    double price = 99.99;
    printf("%s", cz_format("Item {}: Count={}, Price=${}\n", letter, count, price));
    
    /* Example 5: Pointers */
    printf("\n--- Example 5: Pointer Display ---\n");
    int value = 123;
    int *ptr = &value;
    printf("%s", cz_format("Value at address {} is {}\n", ptr, value));
    
    /* Example 6: String concatenation style */
    printf("\n--- Example 6: String Building ---\n");
    const char *first = "Hello";
    const char *second = "World";
    printf("%s", cz_format("{}, {}!\n", first, second));
    
    /* Example 7: No arguments */
    printf("\n--- Example 7: Static Message ---\n");
    printf("%s", cz_format("This is a message with no placeholders\n"));
    
    /* Example 8: Expression results */
    printf("\n--- Example 8: Computed Values ---\n");
    printf("%s", cz_format("5 + 3 = {}\n", 5 + 3));
    printf("%s", cz_format("10 * 2 = {}\n", 10 * 2));
    
    printf("\n=== All examples completed ===\n");
    return 0;
}
