#include <stdio.h>

int main(void) {
    printf("=== Testing CZar cz_format System ===\n\n");

    /* Test 1: Simple string with {} placeholder */
    printf("--- Test 1: Simple {} placeholder ---\n");
    const char *name = "CZar";
    printf("%s", cz_format("Hello {}\n", name));

    /* Test 2: Multiple {} placeholders */
    printf("\n--- Test 2: Multiple {} placeholders ---\n");
    int x = 42;
    int y = 100;
    printf("%s", cz_format("x = {}, y = {}\n", x, y));

    /* Test 3: Different types with {} */
    printf("\n--- Test 3: Different types ---\n");
    int integer = 123;
    unsigned int uinteger = 456;
    long lvalue = 789L;
    double dvalue = 3.14159;
    char character = 'A';
    
    printf("%s", cz_format("int: {}\n", integer));
    printf("%s", cz_format("uint: {}\n", uinteger));
    printf("%s", cz_format("long: {}\n", lvalue));
    printf("%s", cz_format("double: {}\n", dvalue));
    printf("%s", cz_format("char: {}\n", character));

    /* Test 4: Named placeholder {{name}} syntax */
    printf("\n--- Test 4: Named {{name}} placeholders ---\n");
    int count = 5;
    printf("%s", cz_format("Count is {{count}}\n", count));
    printf("%s", cz_format("Name is {{username}}\n", "Alice"));

    /* Test 5: Mixed placeholders */
    printf("\n--- Test 5: Mixed placeholders ---\n");
    printf("%s", cz_format("User {{user}} has {{points}} points\n", "Bob", 1000));

    /* Test 6: Pointer type */
    printf("\n--- Test 6: Pointer type ---\n");
    int val = 99;
    int *ptr = &val;
    printf("%s", cz_format("Pointer: {}\n", ptr));

    /* Test 7: String formatting */
    printf("\n--- Test 7: String formatting ---\n");
    const char *greeting = "Hello";
    const char *world = "World";
    printf("%s", cz_format("{} {}!\n", greeting, world));

    /* Test 8: Zero arguments (just format string) */
    printf("\n--- Test 8: No placeholders ---\n");
    printf("%s", cz_format("This is a plain message\n"));

    printf("\n=== All cz_format tests completed ===\n");
    
    return 0;
}
