#include <stdint.h>
#include <stddef.h>
#include <stdio.h>

/* Test that validates zero-initialization is working properly
 * In CZar, all locals must be explicitly initialized
 */

int main(void) {
    /* These must be explicitly zero-initialized */
    u32 uninitialized_u32 = 0;
    i32 uninitialized_i32 = 0;
    f32 uninitialized_f32 = 0.0f;
    usize uninitialized_usize = 0;

    /* Verify they are zero */
    cz_assert(uninitialized_u32 == 0);
    cz_assert(uninitialized_i32 == 0);
    cz_assert(uninitialized_f32 == 0.0f);
    cz_assert(uninitialized_usize == 0);

    printf("Zero-initialization enforcement test: OK\n");

    return 0;
}
