// Test cast<Type> functionality

fn main() -> i32 {
    // Test basic casting
    val i32 num = 42
    val bool b = cast<bool>(num)  // non-zero should be true
    
    // Test numeric casts
    val i32 small = 100
    val i64 big = cast<i64>(small)
    val i32 back = cast<i32>(big)
    
    // Test with expressions
    val i32 result = cast<i32>(10 + 20)
    
    if b {
        if back == 100 {
            if result == 30 {
                return 1  // success
            }
        }
    }
    
    return 0
}
