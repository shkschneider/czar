// Test compound assignment operators (+=, -=, *=, /=)
// These should only work on mutable variables (var)

fn main() -> i32 {
    var x: i32 = 10
    
    // Test += operator
    x += 5   // x should be 15
    
    // Test -= operator
    x -= 3   // x should be 12
    
    // Test *= operator
    x *= 2   // x should be 24
    
    // Test /= operator
    x /= 3   // x should be 8
    
    return x  // should return 8
}
