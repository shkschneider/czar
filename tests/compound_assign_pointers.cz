// Test compound assignment operators with pointers
struct Point {
    i32 x
    i32 y
}

fn main() -> i32 {
    var Point p = Point { x: 10, y: 20 }
    var Point* ptr = &p
    
    // Test compound assignments through pointer
    ptr.x += 5   // p.x should be 15
    ptr.y *= 2   // p.y should be 40
    
    return p.x + p.y  // should return 55
}
