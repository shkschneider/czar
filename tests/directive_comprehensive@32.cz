// Test all directives together
fn helper(i32 x) -> i32 {
    bool is_debug = #DEBUG
    
    if is_debug {
        return x + 10
    }
    
    return x
}

fn main() -> i32 {
    // Test that directives work in expressions
    bool debug_mode = #DEBUG
    
    // #DEBUG should be false without --debug flag
    if debug_mode {
        return 1
    }
    
    i32 result = helper(32)
    
    // result should be 32 (not 42) without --debug
    // but with --debug it would be 42
    return result
}
