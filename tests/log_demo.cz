#include <stdio.h>

/* Comprehensive logging demo showing all features */

void test_function(void) {
    Log.info("This is called from test_function()");
}

int main(void) {
    printf("=== CZar Standardized Logging Demo ===\n\n");
    
    /* Default behavior: debug mode ON */
    printf("1. Default (debug=true): Only INFO+ shown\n");
    Log.verbose("Verbose: hidden");
    Log.debug("Debug: hidden");
    Log.info("Info: shown with formatted value: %d", 42);
    Log.warning("Warning: potential issue at line %d", __LINE__);
    Log.error("Error: something went wrong!");
    
    /* Switch to debug OFF to see all levels */
    printf("\n2. Setting debug mode OFF\n");
    CZ_LOG_DEBUG_MODE = 0;
    Log.verbose("Verbose: now visible");
    Log.debug("Debug: now visible");
    Log.info("Info: still visible");
    
    /* Call from another function */
    printf("\n3. Logging from another function\n");
    test_function();
    
    /* Format string examples */
    printf("\n4. Format string examples\n");
    Log.info("String: %s, Int: %d, Float: %.2f", "test", 123, 3.14);
    Log.warning("Hex: 0x%x, Pointer: %p", 255, (void*)&main);
    
    printf("\n=== Demo complete ===\n");
    return 0;
}
