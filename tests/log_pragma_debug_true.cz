#include <stdio.h>

/* Test pragma czar debug directive with true */
#pragma czar debug true

int main(void) {
    printf("=== Testing CZar Logging with Debug ON via Pragma ===\n\n");
    
    /* With debug true (default), only INFO+ should appear */
    printf("--- Only INFO+ log levels should be visible ---\n");
    
    Log_verbose("This verbose should NOT appear");
    Log_debug("This debug should NOT appear");
    Log_info("This info SHOULD appear");
    Log_warning("This warning SHOULD appear");
    Log_error("This error SHOULD appear");
    
    printf("\n=== Test complete ===\n");
    
    return 0;
}
