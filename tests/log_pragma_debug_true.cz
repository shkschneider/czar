#include <stdio.h>

/* Test pragma czar debug directive with true */
#pragma czar debug true

int main(void) {
    printf("=== Testing CZar Logging with Debug ON via Pragma ===\n\n");

    /* With debug true, all log levels should appear */
    printf("--- All log levels should be visible ---\n");

    Log.verbose("This verbose SHOULD appear");
    Log.debug("This debug SHOULD appear");
    Log.info("This info SHOULD appear");
    Log.warning("This warning SHOULD appear");
    Log.error("This error SHOULD appear");

    printf("\n=== Test complete ===\n");

    return 0;
}
