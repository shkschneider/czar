#include <stdio.h>

int main(void) {
    printf("=== Testing CZar Logging System ===\n\n");
    
    /* Test with debug mode enabled (default) - should only show INFO and above */
    printf("--- Test 1: Debug mode ON (default) - should only show INFO+ ---\n");
    
    Log_verbose("This verbose message should NOT appear");
    Log_debug("This debug message should NOT appear");
    Log_info("This info message SHOULD appear");
    Log_warning("This warning message SHOULD appear");
    Log_error("This error message SHOULD appear");
    
    printf("\n--- Test 2: Debug mode OFF - should show all levels ---\n");
    cz_log_debug_mode = 0;
    
    Log_verbose("This verbose message SHOULD appear");
    Log_debug("This debug message SHOULD appear");
    Log_info("This info message SHOULD appear");
    Log_warning("This warning message SHOULD appear");
    Log_error("This error message SHOULD appear");
    
    printf("\n--- Test 3: Testing format strings ---\n");
    
    int value = 42;
    const char *text = "test";
    Log_info("Integer: %d, String: %s", value, text);
    Log_warning("Pointer: %p, Hex: 0x%x", (void*)&value, value);
    
    printf("\n=== All logging tests passed ===\n");
    
    return 0;
}
