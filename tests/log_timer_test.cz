#include <stdio.h>

/* Use pragma to set debug mode ON - all log levels will be visible */
#pragma czar debug true

int main(void) {
    printf("=== Testing CZar Log with Timer ===\n\n");

    /* Log at start */
    Log.info("Program started");

    /* Sleep a bit and log again */
    cz_nanosleep(50000000);  /* 50ms */
    Log.info("After 50ms sleep");

    /* More sleep */
    cz_nanosleep(100000000);  /* 100ms */
    Log.warning("After 100ms more (150ms total)");

    /* Final sleep */
    cz_nanosleep(150000000);  /* 150ms */
    Log.info("After 150ms more (300ms total)");

    /* Show different log levels with timing */
    Log.verbose("Verbose at ~0.3s");
    Log.debug("Debug at ~0.3s");
    Log.error("Error at ~0.3s");

    printf("\n=== Test completed - timestamps show elapsed program time ===\n");

    return 0;
}
