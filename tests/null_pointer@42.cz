// Test null pointer literal
struct Node {
    i32 value
}

fn main() -> i32 {
    // Null can be assigned to pointer types
    mut Node* p = null

    // Check if we can assign null and non-null
    if p == null {
        Node* n = new Node { value: 42 }
        p = n
        return p.value
    }

    return 0
}
