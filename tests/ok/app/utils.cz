// Utility module with helper functions
module app.utils

// Public function to calculate absolute value
pub fn abs(i32 x) i32 {
    if x < 0 {
        return -x
    }
    return x
}

// Public function to find maximum of two numbers
pub fn max(i32 a, i32 b) i32 {
    if a > b {
        return a
    }
    return b
}

// Public function to find minimum of two numbers
pub fn min(i32 a, i32 b) i32 {
    if a < b {
        return a
    }
    return b
}

// Public function using private helper (defined later)
pub fn clamp(i32 x) i32 {
    return clamp_value(x, 0, 100)
}

// Private helper for internal use - defined after use
fn clamp_value(i32 x, i32 min_val, i32 max_val) i32 {
    if x < min_val {
        return min_val
    }
    if x > max_val {
        return max_val
    }
    return x
}
