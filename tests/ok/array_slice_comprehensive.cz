// Comprehensive demonstration of array and slice features
fn main() i32 {
    // 1. Explicit array size with literal
    i32[3] explicit = [ 10, 20, 30 ]
    
    // 2. Implicit array size (inferred from literal)
    i32[*] implicit = [ 100, 200, 300, 400 ]
    
    // 3. Array access with bounds checking
    i32 first = explicit[0]
    i32 last = implicit[3]
    
    // 4. Slice creation with positive indices
    i32[] slice1 = explicit[0:2]
    
    // 5. Slice creation with negative end index (length-1)
    i32[] slice2 = implicit[1:-1]
    
    // 6. Slice indexing
    i32 s1_val = slice1[0]   // Should be 10
    i32 s2_val = slice2[1]   // Should be 300
    
    // Calculate result
    i32 result = first + last + s1_val + s2_val
    // Expected: 10 + 400 + 10 + 300 = 720
    
    return result - 720
}
