// Test bitwise operators
fn main() i32 {
    i32 a = 12    // 1100 in binary
    i32 b = 10    // 1010 in binary
    
    // Bitwise AND: 12 & 10 = 8 (1000)
    i32 and_result = a & b
    
    // Bitwise OR: 12 | 10 = 14 (1110)
    i32 or_result = a | b
    
    // Bitwise XOR: 12 ^ 10 = 6 (0110)
    i32 xor_result = a ^ b
    
    // Bitwise NOT: ~10 = -11 (two's complement)
    i32 not_result = ~b
    
    // Left shift: 5 << 2 = 20 (shift 0101 left by 2 = 10100)
    i32 shl_result = 5 << 2
    
    // Right shift: 20 >> 2 = 5
    i32 shr_result = 20 >> 2
    
    // Verify: 8 + 14 + 6 + (-11) + 20 + 5 = 42
    i32 sum = and_result + or_result + xor_result + not_result + shl_result + shr_result
    
    return sum - 42
}
