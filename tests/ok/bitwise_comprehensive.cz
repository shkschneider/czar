// Comprehensive test for bitwise operations
fn main() i32 {
    // Test precedence: bitwise operations with arithmetic
    i32 r1 = 3 + 4 & 7        // Should be (3 + 4) & 7 = 7 & 7 = 7
    i32 r2 = 10 | 5 + 2       // Should be 10 | (5 + 2) = 10 | 7 = 15
    i32 r3 = 8 << 1 + 1       // Should be 8 << (1 + 1) = 8 << 2 = 32
    
    // Test chaining
    i32 r4 = 15 & 7 | 8       // (15 & 7) | 8 = 7 | 8 = 15
    i32 r5 = 1 | 2 | 4 | 8    // 1 | 2 | 4 | 8 = 15
    i32 r6 = 255 & 15 & 7     // 255 & 15 & 7 = 7
    
    // Test with parentheses
    i32 r7 = (8 | 4) & 12     // 12 & 12 = 12
    i32 r8 = ~(5 ^ 3)         // ~6 = -7
    
    // Verify sum: 7 + 15 + 32 + 15 + 15 + 7 + 12 + (-7) = 96
    i32 sum = r1 + r2 + r3 + r4 + r5 + r6 + r7 + r8
    
    return sum - 96
}
