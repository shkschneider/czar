// Test comprehensive break and continue with nested loops
fn test_nested_break() i32 {
    mut i32 count = 0
    mut bool should_break = false
    
    repeat 5 {
        repeat 5 {
            count = count + 1
            if count == 10 {
                should_break = true
                break
            }
        }
        if should_break {
            break
        }
    }
    
    return count  // Should be 10
}

fn test_nested_continue() i32 {
    mut i32 sum = 0
    mut i32 i = 0
    
    repeat 3 {
        mut i32 j = 0
        repeat 4 {
            j = j + 1
            if j == 2 {
                continue
            }
            sum = sum + 1
        }
        i = i + 1
    }
    
    return sum  // 3 * 3 = 9 (skipping j==2 each time)
}

fn test_break_continue_mixed() i32 {
    mut i32 sum = 0
    mut i32 i = 0
    
    while i < 20 {
        i = i + 1
        if i > 10 {
            break
        }
        if i == 5 {
            continue
        }
        sum = sum + i
    }
    
    return sum  // 1+2+3+4+6+7+8+9+10 = 50
}

fn main() i32 {
    i32 a = test_nested_break()          // 10
    i32 b = test_nested_continue()       // 9
    i32 c = test_break_continue_mixed()  // 50
    
    return (a + b + c) - 69  // 10 + 9 + 50 = 69
}
