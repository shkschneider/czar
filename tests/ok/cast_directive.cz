    // Test safe cast with fallback using new syntax
    i32 i = 1000
    
    // Use <Type> expr ?? fallback for safe casts with fallback value
    // For now, performs regular cast (no runtime checking)
    // Fallback is implicitly converted to target type
    i64 big = <i64> i ?? 0
    u8 small = <u8> i ?? 255
    
    // Fallback is implicitly converted
    i32 result = <i32> big ?? 42
    
    if big == 1000 {
        return 0  // success
    }
    
    return 1
}
