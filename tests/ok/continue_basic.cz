// Test continue statement in loops
fn test_continue_while() i32 {
    mut i32 sum = 0
    mut i32 i = 0
    
    while i < 10 {
        i = i + 1
        if i == 3 or i == 7 {
            continue
        }
        sum = sum + i
    }
    
    return sum  // 1+2+4+5+6+8+9+10 = 45
}

fn test_continue_for() i32 {
    i32[6] arr = [1, 2, 3, 4, 5, 6]
    mut i32 sum = 0
    
    for idx, val in arr {
        if val == 2 or val == 5 {
            continue
        }
        sum = sum + val
    }
    
    return sum  // 1+3+4+6 = 14
}

fn test_continue_repeat() i32 {
    mut i32 sum = 0
    mut i32 i = 0
    
    repeat 5 {
        i = i + 1
        if i == 2 or i == 4 {
            continue
        }
        sum = sum + i
    }
    
    return sum  // 1+3+5 = 9
}

fn main() i32 {
    i32 a = test_continue_while()   // 45
    i32 b = test_continue_for()     // 14
    i32 c = test_continue_repeat()  // 9
    
    return (a + b + c) - 68  // 45 + 14 + 9 = 68
}
