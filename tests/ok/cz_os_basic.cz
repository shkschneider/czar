// Test cz.os struct with OS detection
#import cz.os
#import cz.fmt

fn main() i32 {
    // Access OS information
    // os.name should be "linux", "windows", "macos", etc.
    // os.version should be the kernel version
    // os.kernel should be "kernel_name kernel_version"

    // Check boolean flags
    if os.linux {
        fmt.println("linux")
        return 0  // Success on Linux
    }

    if os.windows {
        fmt.println("windows")
        return 0  // Success on Windows
    }

    if os.macos {
        fmt.println("macos")
        return 0  // Success on macOS
    }

    // Unknown OS
    return 1
}
