// Comprehensive test showing all directives in practical use
import cz
fn validate(i32 value) i32 {
    // Use #DEBUG for conditional validation
    bool should_validate = #DEBUG

    if should_validate {
        // In debug mode, perform extra checks
        if value < 0 {
            return -1
        }
    }

    return value
}

fn compute(i32 a, i32 b) i32 {
    i32 result = a + b

    // Can use #FUNCTION for logging/tracing (if we had print)
    // The directive is evaluated at compile time
    bool debug = #DEBUG

    return validate(result)
}

fn main() i32 {
    // All directives can be used in expressions
    // #FILE returns "directive_all_together@0.cz"
    // #FUNCTION returns "main"
    // #DEBUG returns false (or true with --debug flag)

    i32 x = compute(5, 10)

    // Without --debug: validate() doesn't check, returns 15
    // With --debug: validate() checks value, still returns 15 (positive)

    return x - 15
}
