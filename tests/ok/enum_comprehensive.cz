// Comprehensive enum test
// Tests: basic enums, comparison, enum with functions

enum Color {
    RED,
    GREEN,
    BLUE,
    YELLOW
}

enum Status {
    OK,
    NOT_FOUND,
    SERVER_ERROR
}

fn color_to_string(Color c) cstr {
    if c == Color.RED {
        return "Red"
    }
    if c == Color.GREEN {
        return "Green"
    }
    if c == Color.BLUE {
        return "Blue"
    }
    return "Yellow"
}

fn status_is_error(Status s) bool {
    if s == Status.NOT_FOUND {
        return true
    }
    if s == Status.SERVER_ERROR {
        return true
    }
    return false
}

fn main() i32 {
    // Test basic enum usage
    Color c1 = Color.RED
    Color c2 = Color.GREEN
    
    if c1 == c2 {
        return 1  // Should not be equal
    }
    
    // Test enum comparison
    mut Status status = Status.OK
    if status_is_error(status) {
        return 2  // OK is not an error
    }
    
    status = Status.NOT_FOUND
    if not status_is_error(status) {
        return 3  // NOT_FOUND is an error
    }
    
    // Test enum in function
    cstr color_name = color_to_string(Color.BLUE)
    
    return 0
}
