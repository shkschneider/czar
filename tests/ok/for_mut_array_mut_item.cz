// Test for loop with mutable array and mutable item
fn main() i32 {
    mut [3]i32 arr = [ 10, 20, 30 ]
    
    // Modify items using mut item
    for idx, mut item in arr {
        *item = *item * 2
    }
    
    // Check results
    mut i32 sum = 0
    for _, val in arr {
        sum = sum + val
    }
    
    return sum - 120  // 20 + 40 + 60 = 120
}
