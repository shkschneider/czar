// Test generics with different operations for signed integers

// Generic function to negate a value
fn <i8:i16:i32:i64> negate(T n) T {
    return 0 - n
}

// Generic function to double a value
fn <i8:i16:i32:i64> double(T n) T {
    return n + n
}

// Generic function for absolute difference
fn <i32:i64> abs_diff(T a, T b) T {
    if a > b {
        return a - b
    }
    return b - a
}

fn main() i32 {
    // Test negate with i32
    i32 pos = 42
    i32 neg = negate(pos)
    if neg != -42 {
        return 1
    }
    
    i32 zero = negate(neg)
    if zero != 42 {
        return 2
    }
    
    // Test double
    i32 doubled = double(10)
    if doubled != 20 {
        return 3
    }
    
    // Test with negative
    i32 neg_doubled = double(-5)
    if neg_doubled != -10 {
        return 4
    }
    
    // Test abs_diff
    i32 diff1 = abs_diff(100, 30)
    if diff1 != 70 {
        return 5
    }
    
    i32 diff2 = abs_diff(30, 100)
    if diff2 != 70 {
        return 6
    }
    
    return 0
}
