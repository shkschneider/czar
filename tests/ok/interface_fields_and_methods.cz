// Test interface with both fields and methods

iface iShape {
    i32 width
    i32 height
    fn area() i32
}

struct Rectangle : iShape {
    i32 width
    i32 height
}

fn Rectangle:area() i32 {
    return self.width * self.height
}

fn main() i32 {
    Rectangle r = Rectangle { width: 5, height: 3 }

    if not (r is iShape) {
        return 1
    }

    i32 a = r:area()
    if a != 15 {
        return 2
    }

    if r.width != 5 {
        return 3
    }

    if r.height != 3 {
        return 4
    }

    return 0
}
