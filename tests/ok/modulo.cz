// Test modulo (%) operator
// Tests basic modulo operations and compound assignment (%=)

fn main() i32 {
    mut i32 x = 17
    mut i32 y = 5

    // Test basic modulo operation
    i32 result1 = x % y  // 17 % 5 = 2

    // Test modulo with different values
    i32 result2 = 10 % 3  // 10 % 3 = 1

    // Test modulo in expression
    i32 result3 = (20 % 7) + 1  // (20 % 7) + 1 = 6 + 1 = 7

    // Test %= compound assignment operator
    x %= 4  // 17 % 4 = 1

    // Test multiple operations
    mut i32 z = 100
    z %= 30  // 100 % 30 = 10
    z %= 3   // 10 % 3 = 1

    // Verify all results
    // result1 = 2, result2 = 1, result3 = 7, x = 1, z = 1
    // Sum: 2 + 1 + 7 + 1 + 1 = 12
    return result1 + result2 + result3 + x + z - 12
}
