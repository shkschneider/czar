// Comprehensive test for cz.os struct
#import cz.os.*
#import cz.fmt.*

fn main() i32 {
    // Test all fields exist and can be accessed
    // Test String fields
    println(Os.name)
    println(Os.version)
    println(Os.kernel)

    // Test boolean fields - exactly one should be true
    mut i32 count = 0
    if Os.linux {
        count = count + 1
    }
    if Os.windows {
        count = count + 1
    }
    if Os.macos {
        count = count + 1
    }

    // Exactly one OS should be detected
    if count != 1 {
        return 1
    }

    return 0
}
