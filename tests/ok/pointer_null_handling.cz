// Test comprehensive null pointer handling
struct Point {
    i32 x
    i32 y
}

fn main() i32 {
    // Test 1: null assignment
    Point? p1 = null
    if p1 == null {
        // Success
    } else {
        return 1
    }
    
    // Test 2: non-null assignment
    Point pt = Point { x: 10, y: 20 }
    Point? p2 = pt  // Implicit conversion to nullable
    
    // Test 3: Nullable to nullable assignment
    Point? p3 = p2
    
    if p3.x == 10 {
        return 0
    }
    
    return 2
}
