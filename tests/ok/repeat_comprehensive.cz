// Test comprehensive repeat loop functionality
fn factorial(i32 n) i32 {
    mut i32 result = 1
    mut i32 i = 1
    
    repeat n {
        result = result * i
        i = i + 1
    }
    
    return result
}

fn test_nested_repeat() i32 {
    mut i32 count = 0
    
    repeat 3 {
        repeat 4 {
            count = count + 1
        }
    }
    
    return count  // 3 * 4 = 12
}

fn test_with_variable() i32 {
    i32 times = 7
    mut i32 sum = 0
    
    repeat times {
        sum = sum + 2
    }
    
    return sum  // 7 * 2 = 14
}

fn main() i32 {
    // Test basic factorial
    i32 fact5 = factorial(5)  // 5! = 120
    
    // Test nested repeats
    i32 nested = test_nested_repeat()  // 12
    
    // Test with variable
    i32 withvar = test_with_variable()  // 14
    
    // All tests should sum to 146
    return (fact5 + nested + withvar) - 146
}
