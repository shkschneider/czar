// Test sizeof functionality

struct Point {
    i32 x
    i32 y
}

struct Large {
    i64 a
    i64 b
    i32 c
}

fn main() i32 {
    // Test sizeof on primitives
    i32 x = 1
    i32 size_i32 = sizeof x

    i64 y = 1 as<i64>
    i32 size_i64 = sizeof y

    bool b = true
    i32 size_bool = sizeof b

    // Test sizeof on struct variables
    Point p = Point { x: 10, y: 20 }
    i32 size_point = sizeof p

    Large l = Large { a: 100 as<i64>, b: 200 as<i64>, c: 300 }
    i32 size_large = sizeof l

    // Basic sanity checks
    // i32 should be 4 bytes
    if size_i32 == 4 {
        // i64 should be 8 bytes
        if size_i64 == 8 {
            // bool should be 1 byte
            if size_bool == 1 {
                // Point should be at least 8 bytes (two i32s)
                if size_point >= 8 {
                    return 0 // success
                }
            }
        }
    }

    return 8
}
