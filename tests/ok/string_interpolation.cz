// Test String interpolation with mustache-like syntax
#import cz.fmt.*

fn main() i32 {
    i32 age = 25
    i32 year = 2024

    // Test basic interpolation
    println("Hello {age}")

    // Test multiple interpolations
    println("Age: {age}, Year: {year}")

    // Test escaped braces
    print("Not interpolated: \{age\}")
    println("")

    // Test with expressions
    println("Next year: {year + 1}")

    // Test with print (no newline)
    print("Value: {age}")
    println("")

    return 0
}
