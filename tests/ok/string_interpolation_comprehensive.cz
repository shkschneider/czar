// Comprehensive test of string interpolation features
#import cz.fmt

fn main() i32 {
    i32 age = 30
    i32 year = 2025
    bool flag = true

    // Basic interpolation
    cz.fmt.println("Age is {age}")

    // Multiple interpolations
    cz.fmt.println("I am {age} years old in {year}")

    // Expressions in interpolation
    cz.fmt.println("Next year I'll be {age + 1}")
    cz.fmt.println("Double my age: {age * 2}")

    // Different types
    cz.fmt.println("Flag value: {flag}")

    // Escaped braces
    cz.fmt.println("Literal braces: \{not_a_variable\}")

    // With print (no newline)
    cz.fmt.print("Hello ")
    cz.fmt.print("{age}")
    cz.fmt.println("!")

    // Nested expressions
    i32 a = 10
    i32 b = 20
    cz.fmt.println("Sum: {a + b}, Product: {a * b}")

    return 0
}
