// Comprehensive test of string interpolation features
import cz
fn main() i32 {
    i32 age = 30
    i32 year = 2025
    bool flag = true
    
    // Basic interpolation
    cz.println("Age is {age}")
    
    // Multiple interpolations
    cz.println("I am {age} years old in {year}")
    
    // Expressions in interpolation
    cz.println("Next year I'll be {age + 1}")
    cz.println("Double my age: {age * 2}")
    
    // Different types
    cz.println("Flag value: {flag}")
    
    // Escaped braces
    cz.println("Literal braces: \{not_a_variable\}")
    
    // With print (no newline)
    cz.print("Hello ")
    cz.print("{age}")
    cz.println("!")
    
    // Nested expressions
    i32 a = 10
    i32 b = 20
    cz.println("Sum: {a + b}, Product: {a * b}")
    
    return 0
}
