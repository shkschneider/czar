// Test string:suffix() method
fn main() i32 {
    String s = String { "Hello World" }
    String suffix1 = String { "World" }
    String suffix2 = String { "Hello" }
    
    // Check if String ends with "World"
    i32 has_suffix = s.suffix(suffix1)
    
    if has_suffix != 1 {
        return 1
    }
    
    // Check if String ends with "Hello" (should not)
    i32 no_suffix = s.suffix(suffix2)
    
    if no_suffix != 0 {
        return 2
    }
    
    // Test empty suffix (should always match)
    String empty = String { "" }
    i32 empty_suffix = s.suffix(empty)
    
    if empty_suffix != 1 {
        return 3
    }
    
    // Test suffix longer than string
    String long_suffix = String { "Extended Hello World" }
    i32 long_no_match = s.suffix(long_suffix)
    
    if long_no_match != 0 {
        return 4
    }
    
    return 0
}
