// Test refined struct initialization semantics

struct Vec2 {
    u8 x
    u8 y
}

fn main() i32 {
    // Test 1: Zero-initialization
    Vec2 v1 = Vec2 {}
    #assert(v1.x == 0)
    #assert(v1.y == 0)
    
    // Test 2: Named field initialization
    Vec2 v2 = Vec2 { x: 1, y: 2 }
    #assert(v2.x == 1)
    #assert(v2.y == 2)
    
    // Test 3: Positional initialization (all fields required)
    Vec2 v3 = Vec2 { 3, 4 }
    #assert(v3.x == 3)
    #assert(v3.y == 4)
    
    // Test 4: Partial named initialization (unspecified fields should be zero)
    Vec2 v4 = Vec2 { x: 5 }
    #assert(v4.x == 5)
    #assert(v4.y == 0)
    
    return 0
}
